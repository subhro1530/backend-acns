# ===============================================
# ACNS Backend - Environment Configuration
# Advanced Cloud & Network Solutions
# ===============================================
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit the .env file to version control
# ===============================================

# ================
# SERVER SETTINGS
# ================
NODE_ENV=development
PORT=5000

# ================
# DATABASE
# ================
# PostgreSQL connection string
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL=postgres://username:password@hostname:5432/dbname?sslmode=require

# ================
# JWT AUTHENTICATION
# ================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ================
# EMAIL (SMTP)
# ================
# Gmail SMTP settings (use App Password if 2FA enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=ACNS <noreply@acns.tech>

# ================
# FILE UPLOADS
# ================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# ================
# CORS SETTINGS
# ================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,https://acns.me,https://www.acns.me

# ================
# RATE LIMITING
# ================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================
# VULTR OBJECT STORAGE
# ================
VULTR_ACCESS_KEY=your-vultr-access-key
VULTR_SECRET_KEY=your-vultr-secret-key
VULTR_BUCKET=acns-uploads
VULTR_REGION=blr2
VULTR_ENDPOINT=https://blr2.vultrobjects.com

# ================
# ADMIN DEFAULTS
# ================
ADMIN_DEFAULT_EMAIL=admin@acns.tech
ADMIN_DEFAULT_PASSWORD=ChangeThisPassword!

# ================
# LOGGING
# ================
LOG_LEVEL=info
LOG_DIR=logs

# ================
# FRONTEND URL
# ================
FRONTEND_URL=https://acns.me

# ================
# GEMINI AI (10 keys for rotation/load balancing)
# ================
# Get keys from: https://aistudio.google.com/apikey
GEMINI_KEY_1=your-gemini-api-key-1
GEMINI_KEY_2=your-gemini-api-key-2
GEMINI_KEY_3=your-gemini-api-key-3
GEMINI_KEY_4=your-gemini-api-key-4
GEMINI_KEY_5=your-gemini-api-key-5
GEMINI_KEY_6=your-gemini-api-key-6
GEMINI_KEY_7=your-gemini-api-key-7
GEMINI_KEY_8=your-gemini-api-key-8
GEMINI_KEY_9=your-gemini-api-key-9
GEMINI_KEY_10=your-gemini-api-key-10
GEMINI_MODEL=gemini-2.5-flash
